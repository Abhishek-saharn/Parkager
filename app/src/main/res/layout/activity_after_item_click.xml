<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhisheksaharn.parkager.AfterItemClick">

    <include
        android:id="@+id/included_appbar6"
        layout="@layout/app_bar"></include>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/included_appbar6"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/iLinear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/tvID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Teal"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Teal"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/iLinear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvVnumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Teal"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvVdesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Teal"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/iLinear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvIntime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Teal"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvOuttime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Teal"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/iLinear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Total Amount:"
                    android:textColor="@color/Teal"
                    android:textSize="20sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tvRs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/Teal"
                    android:textSize="35sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/dynamicIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/iLinear4"
                android:layout_gravity="center"
                android:minHeight="400dp"
                android:minWidth="400dp"
                android:src="@drawable/defaultimageview" />
        </LinearLayout>


    </ScrollView>


</RelativeLayout>
