<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abhisheksaharn.parkager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.abhisheksaharn.parkager.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.abhisheksaharn.parkager.Parkager"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.abhisheksaharn.parkager.DataTable"
            android:label="@string/title_activity_data_table"
            android:parentActivityName="com.example.abhisheksaharn.parkager.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.abhisheksaharn.parkager.NavigationDrawerFragment"
            android:label="@string/title_activity_navigation_drawer_fragment"
            android:parentActivityName="com.example.abhisheksaharn.parkager.MainActivity" />
        <activity
            android:name="com.example.abhisheksaharn.parkager.CheckIn"
            android:label="@string/title_activity_check_inn"
            android:parentActivityName="com.example.abhisheksaharn.parkager.MainActivity" />
        <activity
            android:name="com.example.abhisheksaharn.parkager.SearchByName"
            android:label="@string/title_activity_search_by_name"
            android:parentActivityName="com.example.abhisheksaharn.parkager.MainActivity" />
        <activity
            android:name="com.example.abhisheksaharn.parkager.CheckOut"
            android:label="CheckOut"
            android:parentActivityName="com.example.abhisheksaharn.parkager.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.abhisheksaharn.parkager.SearchResult"
            android:label="@string/title_activity_search_result"
            android:parentActivityName="com.example.abhisheksaharn.parkager.MainActivity" />
        <activity
            android:name="com.example.abhisheksaharn.parkager.AfterItemClick"
            android:label="@string/title_activity_after_item_click"
            android:parentActivityName="com.example.abhisheksaharn.parkager.MainActivity" />
        <activity
            android:name="com.example.abhisheksaharn.parkager.Reports"
            android:label="@string/title_activity_reports"
            android:parentActivityName="com.example.abhisheksaharn.parkager.MainActivity" >
        </activity>
        <activity
            android:name="com.example.abhisheksaharn.parkager.AboutDev"
            android:label="@string/title_activity_about_dev" >
        </activity>
        <activity
            android:name="android.support.v7.widget.TestActivity"
            android:label="RecyclerViewTestActivity" />
    </application>

</manifest>